# Environment variables for SGTM backend
# Edit values as appropriate for your environment

# MongoDB connection string (use a production connection string for deployment)
MONGODB_URI=mongodb://localhost:27017/sgtm

# Server port
PORT=3000

# CORS origin allowed (use your frontend origin, '*' allows all)
CORS_ORIGIN=http://localhost:5500

# JWT configuration
# Use a long, random secret in production (do NOT commit a production secret to VCS)
JWT_SECRET=change_me_to_a_strong_random_secret_please_change
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Optional: log level (info, debug, warn, error)
LOG_LEVEL=info
